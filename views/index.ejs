<% include ./partials/header %>
<div class="ui main container segment" id="blogBox">
		<div class="ui top attacted piled padded segment" id="this">
			<div class="ui divided items">
				<% blogs.forEach(function(blog){ %>
					<div class="item">
						<div class="image" id="img">
							<img src="<%= blog.image %>">
						</div>
						<div class="content">
							<a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
							<div class="meta">
								<span><%= blog.created.toDateString() %></span>
							</div>
							<div class="description">
								<p><%= blog.body.substring(0, 200) %>....</p>
							</div>
							<div class="extr">
								<a class="ui floated basic violet button " href="/blogs/<%= blog._id %>">
								Read More
								<i class="right chevron icon"></i>
								</a>
							</div>
						</div>	
					</div>
				<% }) %>
			</div>
		</div>
	</div>
</div>
<% include ./partials/footer %>